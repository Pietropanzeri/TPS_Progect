<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GameClient.View.MainPage"
             xmlns:Controller="clr-namespace:GameClient.Controller"
             x:DataType="Controller:MainPageController"
             Title="MainPage"
             Shell.NavBarIsVisible="False">
    <Grid RowDefinitions="*,*" Margin="0">
        <Frame Grid.Row="0" Padding="0" CornerRadius="0" BorderColor="Transparent">
            <AbsoluteLayout>
                <Label Text="MULTIPLAYER"
                    AbsoluteLayout.LayoutFlags="PositionProportional"
                    AbsoluteLayout.LayoutBounds="0.5,0.5,-1,-1"
                    HorizontalOptions="Center"
                    VerticalOptions="Center" />
                <Button Text="SET"
                    WidthRequest="70"
                    HeightRequest="70"
                    AbsoluteLayout.LayoutFlags="PositionProportional"
                    AbsoluteLayout.LayoutBounds="1,0.6,-1,-1"
                        Command="{Binding OpenImpostazioniCommand}"/>
                <Button Text="CLA"
                    WidthRequest="70"
                    HeightRequest="70"
                    AbsoluteLayout.LayoutFlags="PositionProportional"
                    AbsoluteLayout.LayoutBounds="1,0.82,-1,-1"
                        Command="{Binding OpenClassificaCommand}"/>
            </AbsoluteLayout>
                <Frame.GestureRecognizers>
                <TapGestureRecognizer
                    Command="{Binding OpenGameCommand}"/>
            </Frame.GestureRecognizers>
        </Frame>
        <Frame Grid.Row="1" CornerRadius="0" Padding="0" BackgroundColor="blue">

            <Label 
                VerticalOptions="Center"  
                HorizontalOptions="Center"
                Text="BOT"/>

            <Frame.GestureRecognizers>
                <TapGestureRecognizer
                    Command="{Binding OpenGameBotCommand}"/>
            </Frame.GestureRecognizers>
        </Frame>
    </Grid>
</ContentPage>