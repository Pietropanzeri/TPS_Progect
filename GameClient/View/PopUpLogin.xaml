<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                 x:Class="GameClient.View.PopUpLogin"
                 xmlns:toolkit ="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
                 xmlns:Controller="clr-namespace:GameClient.Controller">
    <VerticalStackLayout>
        <Label 
            Text="EFFETTUA IL LOGIN"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label Text="username"></Label>
        <Entry Text="{Binding Username}"/>
        <Label Text="password"></Label>
        <Entry Text="{Binding Password}"/>
        <HorizontalStackLayout>
            <Button Text="EXIT" Command="{Binding ExitCommand}"></Button>
            <Button Text="OK" Command="{Binding EnterCommand}"></Button>
            <Button Text="OST" Command="{Binding OpsiteCommand}"></Button>
        </HorizontalStackLayout>
        
    </VerticalStackLayout>
</toolkit:Popup>