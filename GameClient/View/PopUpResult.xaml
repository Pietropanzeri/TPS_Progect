<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup   xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                 x:Class="GameClient.View.PopUpResult"
                 xmlns:toolkit ="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
                 xmlns:Controller="clr-namespace:GameClient.Controller"
                 x:DataType="Controller:PopUpResultController"
                 Color="Transparent">
    <VerticalStackLayout>
        <Label Text="{Binding Result}"/>
        <Frame HeightRequest="300" WidthRequest="300" Margin="0" Padding="0" BackgroundColor="Transparent" BorderColor="Transparent" CornerRadius="10">
            <Image Source="{Binding GifResult}" Aspect="AspectFit" IsAnimationPlaying="True" x:Name="resultgif"></Image>
        </Frame>
    </VerticalStackLayout>
    
</toolkit:Popup>